<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container-xl px-4">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <!-- Basic login form-->
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header justify-content-center"><img class="fw-light my-4 img-fluid" src="/CTOPCREW_LOGO.png"></div>
                            <div class="card-body">
                                <!-- Login form-->
                                <form id="loginForm">
                                    <!-- Form Group (email address)-->
                                    <div class="mb-3">
                                        <label class="small mb-1" for="inputEmailAddress">Id</label>
                                        <input class="form-control" id="inputEmailAddress" type="text" placeholder="" />
                                    </div>
                                    <!-- Form Group (password)-->
                                    <div class="mb-3">
                                        <label class="small mb-1" for="inputPassword">Password</label>
                                        <input class="form-control" id="inputPassword" type="password" placeholder="" />
                                    </div>
                                    <!-- Form Group (remember password checkbox)-->
                                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                        <button class="btn btn-primary" id="loginBtn">Login</button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<script>
    $('#loginForm').keypress(function(e) {
        if (e.which === 13) {
            $('#loginBtn').click();
        }
    });

    $("#loginBtn").click(function(){
        $.ajax({
            url: '/login_action',
            method: 'POST',
            data: {'id' : $("#inputEmailAddress").val(), 'pw' : $("#inputPassword").val()},
            success: function(res){
                if(res['result'] == 'ok'){
                    location.href = '/';
                }else{
                    alert('Login fail...');
                };
            },
            error: function(error){
                alert('???');
            }
        });
    });
</script>